{
  "name": "contributte/vite",
  "description": "Vite integration for Nette Framework.",
  "keywords": [
    "nette",
    "vite"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/contributte/vite",
  "authors": [
    {
      "name": "Lubomír Blažek",
      "email": "email@lubomirblazek.cz",
      "homepage": "https://lubomirblazek.cz"
    }
  ],
  "support": {
    "email": "email@lubomirblazek.cz",
    "issues": "https://github.com/contributte/vite/issues"
  },
  "require": {
    "php": ">=7.4",
    "nette/di": "^3.0"
  },
  "require-dev": {
    "latte/latte": "^2.4 || ^3.0",
    "nette/application": "^3.0",
    "nette/bootstrap": "^3.0",
    "nette/tester": "^2.0",
    "phpstan/phpstan": "^0.12",
    "symplify/easy-coding-standard": "^8.3",
    "tracy/tracy": "^2.4"
  },
  "suggest": {
    "tracy/tracy": "to enable asset debugging in the debug bar panel",
    "latte/latte": "to enable Latte integration via {vite} macro"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Vite\\": "src/"
    }
  },
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
